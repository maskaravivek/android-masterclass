<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter user details:"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/user_name"
                android:hint="User name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_email"
                android:hint="Enter email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_age"
                android:hint="Enter age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:hint="Enter address"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/write_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/write_test_data"
                android:textSize="26sp" />

            <Button
                android:id="@+id/read_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/read_test_data"
                android:textSize="26sp" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User details from DB:"
                android:textAlignment="center"
                android:textSize="28sp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/user_id_tv"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/user_name_tv"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/user_email_tv"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/user_age_tv"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/user_address_tv"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>